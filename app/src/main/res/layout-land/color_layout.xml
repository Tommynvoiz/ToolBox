<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006699"
    android:id="@+id/backgroundR"
    >

    <LinearLayout
        android:background="#000000"
        android:id="@+id/background1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </LinearLayout>

    <LinearLayout
        android:background="#000000"
        android:id="@+id/background2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/background3"
        android:layout_alignParentEnd="true">

    </LinearLayout>

    <LinearLayout
        android:background="#000000"
        android:id="@+id/background3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/background1"
        android:layout_centerHorizontal="true">

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a Color"
        android:layout_gravity="center"
        android:id="@+id/bBlue"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/background2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a Color"
        android:id="@+id/bRed"
        android:layout_gravity="center"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/background3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a Color"
        android:id="@+id/bGreen"
        android:layout_gravity="center"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/background1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Background Color"
        android:id="@+id/button"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    


</RelativeLayout>